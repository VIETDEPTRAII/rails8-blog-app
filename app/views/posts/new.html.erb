<div class="container">
  <h1 class="text-center">Create new post</h1>
  <%= form_with model: @post, method: :post, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :title, "Post title" %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :content, "Post content" %>
      <%= f.rich_textarea :content, class: "form-control" %>
    </div>

    <%= f.submit "Create your post", class: "btn btn-primary mb-4" %>
  <% end %>
</div>

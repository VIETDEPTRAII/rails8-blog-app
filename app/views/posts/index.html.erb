<div class="container">
  <h1 class="text-center">Posts</h1>
  <% @posts.each_with_index do |post| %>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <div class="card-text"><%= post.content %></div>
      </div>
    </div>
  <% end %>
</div>

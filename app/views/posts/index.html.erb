<div class="container">
  <h1 class="text-center">Posts</h1>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mt-2">
    <% @posts.each do |post| %>
      <div class="col">
        <div class="card shadow-sm">

          <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder: Thumbnail</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
          <div class="card-body">
            <p class="card-text"><%= post.title %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to "View", post_path(post), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Edit", edit_post_path(post), class: "btn btn-sm btn-outline-secondary" %>
              </div>
              <small class="text-muted">3 mins read</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
